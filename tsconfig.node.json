{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "lib": [
      "ES2023"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    // Optional: only needed if you're using @ in vite.config.ts
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "vite.config.ts"
  ]
}